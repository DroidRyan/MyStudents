<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff5926"
    android:padding="40sp"
    tools:context=".inputdata">

    //Nomor
    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:inputType="number"
        android:hint="1"
        android:textSize="20sp"
        android:maxLength="10"
        android:drawableLeft="@drawable/ic_create_black_24dp"
        android:layout_below="@id/textView1">
        <requestFocus/>
    </EditText>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Nomor"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    //Nama
    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:inputType="text"
        android:hint="Nama Lengkap"
        android:textSize="20sp"
        android:maxLength="20"
        android:drawableLeft="@drawable/ic_group_black_24dp"
        android:layout_below="@id/textView2"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Nama Lengkap"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="80dp"/>

    //Tanggal Lahir
    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:inputType="text"
        android:hint="Jakarta, 29 April 2000"
        android:textSize="20sp"
        android:maxLength="30"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:layout_below="@id/textView3"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Tempat Tanggal Lahir"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="165dp"/>

    //Gender
    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:inputType="text"
        android:hint="L atau P"
        android:textSize="20sp"
        android:maxLength="10"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:layout_below="@id/textView4"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Jenis Kelamin"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="250dp"/>

    //Alamat
    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:inputType="text"
        android:hint="alamat lengkap"
        android:textSize="20sp"
        android:maxLength="50"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:layout_below="@id/textView5"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Alamat Lengkap"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="335dp"/>

    //tombol simpan
    <Button
        android:id="@+id/button1"
        android:textColor="#000000"
        android:drawableLeft="@drawable/ic_save_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/editText5"
        style="?android:attr/borderlessButtonStyle"
        android:text="SIMPAN"/>
</RelativeLayout>